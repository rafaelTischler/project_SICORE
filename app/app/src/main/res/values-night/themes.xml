<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project_SICORE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryVariant">@color/primaryColorDarkVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>
        <item name="colorSecondary">@color/secondaryColorDark</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDarkVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/backgroundColorDark</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonColorPrimary">
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="ButtonColorPrimary_Variant">
        <item name="android:backgroundTint">@color/dark_green</item>
    </style>
</resources>