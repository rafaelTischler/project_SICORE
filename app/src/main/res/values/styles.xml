<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.TextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextView.BigTitle" parent="Base.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Title" parent="Base.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="Base.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView.SmallText" parent="Base.TextView">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
